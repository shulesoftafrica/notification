# Production Environment Configuration
# Copy this to .env.production

# Application
APP_NAME="Notification Service"
APP_ENV=production
APP_KEY=base64:your-production-app-key-here
APP_DEBUG=false
APP_URL=https://notifications.yourdomain.com
APP_VERSION=2.0.0

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Database
DB_CONNECTION=mysql
DB_HOST=your-production-db-host
DB_PORT=3306
DB_DATABASE=notification_service_production
DB_USERNAME=notification_user
DB_PASSWORD=your-secure-database-password

# Redis
REDIS_HOST=your-production-redis-host
REDIS_PASSWORD=your-redis-password
REDIS_PORT=6379
REDIS_DB=0

# Cache
CACHE_DRIVER=redis
CACHE_PREFIX=notif_cache

# Queue
QUEUE_CONNECTION=redis
QUEUE_PREFIX=notif_queue

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Mail (for alerts)
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host
MAIL_PORT=587
MAIL_USERNAME=your-smtp-username
MAIL_PASSWORD=your-smtp-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=alerts@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# AWS (if using SES or other AWS services)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your-s3-bucket
AWS_USE_PATH_STYLE_ENDPOINT=false

# Rate Limiting
RATE_LIMIT_DRIVER=redis
RATE_LIMIT_PREFIX=rate_limit

# Monitoring & Alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
ALERT_EMAILS="admin@yourdomain.com,ops@yourdomain.com"
ESCALATION_EMAILS="ceo@yourdomain.com,cto@yourdomain.com"

# Admin Dashboard
ADMIN_ALLOWED_IPS="192.168.1.100,10.0.0.50"

# Provider Configuration
TWILIO_SID=your-twilio-sid
TWILIO_TOKEN=your-twilio-token
TWILIO_FROM=+1234567890

SENDGRID_API_KEY=your-sendgrid-api-key

WHATSAPP_API_URL=https://api.whatsapp.business/v1
WHATSAPP_TOKEN=your-whatsapp-token

# Security
BCRYPT_ROUNDS=12
HMAC_VALIDATION_WINDOW=300

# Performance
OPCACHE_ENABLE=true
OPCACHE_MEMORY_CONSUMPTION=256
OPCACHE_MAX_ACCELERATED_FILES=20000

# Monitoring
TELESCOPE_ENABLED=false
HEALTH_CHECK_CACHE_TTL=60

# Webhooks
WEBHOOK_MAX_RETRIES=5
WEBHOOK_RETRY_DELAY=1
WEBHOOK_TIMEOUT=30

# File Storage
FILESYSTEM_DISK=s3

# Trusted Proxies (for load balancer)
TRUSTED_PROXIES=*
TRUSTED_HOSTS=notifications.yourdomain.com
